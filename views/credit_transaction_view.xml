<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Tree View -->
    <record id="view_credit_transaction_tree" model="ir.ui.view">
        <field name="name">credit.transaction.tree</field>
        <field name="model">credit.transaction</field>
        <field name="arch" type="xml">
            <tree create="0" edit="0" delete="0" multi_edit="1">
                <field name="partner_id" optional="show"/>
                <field name="date" optional="show"/>
                <field name="sale_order_id" optional="show"/>
                <field name="currency_id" invisible="1" optional="hide"/>
                <field name="state" optional="show"/>
                <field name="note" optional="show"/>
                <field name="amount" optional="show"/>
            </tree>
        </field>
    </record>


    <record id="action_credit_transaction" model="ir.actions.act_window">
        <field name="name">credit transaction</field>
        <field name="res_model">credit.transaction</field>
        <field name="view_mode">tree</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                there are no credit transaction yet.!
            </p>
        </field>
    </record>

    <!-- Menu -->


    <menuitem id="menu_credit_transaction"
              name="credit transaction"
              parent="sale.sale_order_menu"
              action="action_credit_transaction"
              sequence="99"/>
</odoo>

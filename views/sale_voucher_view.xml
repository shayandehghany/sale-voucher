<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Form View -->
    <record id="view_sale_voucher_form" model="ir.ui.view">
        <field name="name">sale.voucher.form</field>
        <field name="model">sale.voucher</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_approve_account" string="approve account" type="object" class="btn-primary"
                            attrs="{'invisible': [('state', '!=', 'draft')]}"/>
                    <button name="action_done" string="done" type="object" class="btn-primary"
                            attrs="{'invisible': [('state', '!=', 'account_approved')]}"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,account_approved,done"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="partner_id"/>
                            <field name="sale_order_id"/>
                        </group>
                        <group>
                            <field name="date"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="products">
                            <field name="voucher_line_ids">
                                <tree editable="bottom">
                                    <field name="product_id"/>
                                    <field name="quantity"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Tree View -->
    <record id="view_sale_voucher_tree" model="ir.ui.view">
        <field name="name">sale.voucher.tree</field>
        <field name="model">sale.voucher</field>
        <field name="arch" type="xml">
            <tree multi_edit="1">
                <field name="name" optional="show"/>
                <field name="partner_id" optional="show"/>
                <field name="date" optional="show"/>
                <field name="sale_order_id" optional="show"/>
                <field name="state" optional="show"/>
            </tree>
        </field>
    </record>

    <record id="sale_voucher_search" model="ir.ui.view">
        <field name="name">sale.voucher.search</field>
        <field name="model">sale.voucher</field>
        <field name="arch" type="xml">
            <search string="sale voucher">
                <field name="name"/>
                <separator/>
                <group expand="1" string="Group By">
                    <filter string="date" name="date" domain="[]" context="{'group_by':'date'}"/>

                </group>


            </search>
        </field>
    </record>

    <!-- Action & Menu -->
    <record id="action_sale_voucher" model="ir.actions.act_window">
        <field name="name">sale vouchers</field>
        <field name="res_model">sale.voucher</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_sale_vouchers"
              name="sale vouchers"
              parent="sale.sale_menu_root"
              action="action_sale_voucher"
              sequence="15"/>
</odoo>
